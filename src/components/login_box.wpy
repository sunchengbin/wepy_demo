<script>
import wepy from 'wepy'
import login from 'libs/login'
export default class LoginBox extends wepy.component {
  props = {
    shown: {
      type: Boolean,
      default: false,
      twoWay: true
    }
  }

  data = {
  }

  hideBox() {
    this.shown = false
    this.$apply()
  }

  showBox() {
    this.shown = true
    this.$apply()
  }

  methods = {
    async getUserInfo(e) {
      // 授权登录窗口允许或者拒绝操作回调
      this.hideBox()
      if (e.detail.userInfo) {
        login.toLogin(e.detail, this.$parent.loginSuccess)
      } else {
        this.showBox()
      }
    }
  }

  // 进入页面必需授权的需求直接在onLoad中执行就好
  loginAuth() {
    const _this = this
    // 查看是否授权
    wx.getSetting({
      success(res) {
        if (res.authSetting['scope.userInfo']) {
          // 已经授权，可以直接调用 getUserInfo 获取头像昵称
        } else {
          _this.showBox()
        }
      },
      fail(res) {
        _this.showBox()
      }
    })
  }

  onLoad(e) {
    // this.loginAuth()
  }

}
</script>
